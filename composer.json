{
  "name": "bnomei/kirby3-unittestkit",
  "description": "Kirby Unittestkit",
  "type": "project",
  "version": "1.0.0",
  "license": "MIT",
  "authors": [
    {
      "name": "Bruno Meilick",
      "email": "b@bnomei.com"
    }
  ],
  "keywords": [
    "kirby3",
    "kirby3-cms",
    "example",
    "demo",
    "php",
    "unittest",
    "phpunit",
    "composer"
  ],
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "require": {
    "php": ">=7.2.0",
    "getkirby/cms": "^3.3"
  },
  "require-dev": {
    "nunomaduro/phpinsights": "^1.8",
    "phpstan/phpstan": "^0.12.11",
    "phpunit/phpunit": "^8.3"
  },
  "autoload": {
    "psr-4": {
      "": "site/models"
    }
  },
  "scripts": {
    "fix": "php-cs-fixer fix",
    "analyze": "phpstan analyse",
    "insights": "./vendor/bin/phpinsights -v",
    "test": [
      "mkdir -p tests/logs",
      "phpunit --configuration ./phpunit.xml"
    ],
    "dist": [
      "composer install --no-dev"
    ],
    "dev": [
      "composer update"
    ]
  }
}
